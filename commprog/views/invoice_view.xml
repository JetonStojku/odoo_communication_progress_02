<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_form_view" model="ir.ui.view">
            <field name="name">commprog.invoice.form</field>
            <field name="model">commprog.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice">
                    <header>
                        <button name="confirm" type="object" string="Confirm" states="draft"/>
                        <button name="pay" type="object" string="Pay" states="done"/>
                        <button name="sent_to_draft" type="object" string="Sent to draft" states="paid"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="invoice_number"/>
                            <h1>
                                <field name="invoice_number" placeholder="Invoice number"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="invoice_type"/>
                            </group>
                            <group>
                                <field name="client_id"/>
                                <field name="employee_id" attrs="{'invisible': [('invoice_type', '=', 'in')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="products" string="Products">
                                <field name="invoice_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="price"/>
                                        <field name="total" />
                                    </tree>
                                    <form>
                                        <h1>
                                            <field name="product_id"/>
                                        </h1>
                                        <group>
                                            <group>
                                                <field name="quantity"/>
                                            </group>
                                            <group>
                                                <field name="price"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                                <group>
                                    <field name="total"/>
                                </group>
                            </page>

<!--                            <page name="products2" string="Products 2">-->
<!--                                <field name="invoice_line_ids2">-->
<!--                                    <tree>-->
<!--                                        <field name="product_id"/>-->
<!--                                        <field name="quantity"/>-->
<!--                                        <field name="price"/>-->
<!--                                        <field name="total" />-->
<!--                                    </tree>-->
<!--                                    <form>-->
<!--                                        <h1>-->
<!--                                            <field name="product_id"/>-->
<!--                                        </h1>-->
<!--                                        <group>-->
<!--                                            <group>-->
<!--                                                <field name="quantity"/>-->
<!--                                            </group>-->
<!--                                            <group>-->
<!--                                                <field name="price"/>-->
<!--                                            </group>-->
<!--                                        </group>-->
<!--                                    </form>-->
<!--                                </field>-->
<!--                                <group>-->
<!--                                    <field name="total"/>-->
<!--                                </group>-->
<!--                            </page>-->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="invoice_tree_view" model="ir.ui.view">
            <field name="name">commprog.invoice.tree</field>
            <field name="model">commprog.invoice</field>
            <field name="arch" type="xml">
                <tree string="Invoice">
                    <field name="invoice_number"/>
                    <field name="invoice_type"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="invoice_search_view" model="ir.ui.view">
            <field name="name">commprog.invoice.search</field>
            <field name="model">commprog.invoice</field>
            <field name="arch" type="xml">
                <search string="Invoice">
                    <field name="invoice_number"/>
                    <field name="invoice_type"/>
                    <field name="date"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <record id="invoice_act_window" model="ir.actions.act_window">
            <field name="name">Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">commprog.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Invoice.
                </p>
            </field>
        </record>

        <menuitem name="Invoice" id="invoice_menu" parent="commprog.commprog_root" action="invoice_act_window"/>

    </data>
</odoo>