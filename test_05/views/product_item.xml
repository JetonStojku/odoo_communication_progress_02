<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product.item_form_view" model="ir.ui.view">
            <field name="name">test_05.product.item.form</field>
            <field name="model">test_05.product.item</field>
            <field name="arch" type="xml">
                <form string="ProductItem">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="weight"/>
                            </group>
                            <group>
                                <field name="factory_id"/>
                                <field name="lot_id"/>
                                <field name="controlled"/>
                                <field name="refuse"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product.item_tree_view" model="ir.ui.view">
            <field name="name">test_05.product.item.tree</field>
            <field name="model">test_05.product.item</field>
            <field name="arch" type="xml">
                <tree string="ProductItem">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="factory_id"/>
                    <field name="lot_id"/>
                    <field name="weight"/>
                </tree>
            </field>
        </record>

        <record id="product.item_search_view" model="ir.ui.view">
            <field name="name">test_05.product.item.search</field>
            <field name="model">test_05.product.item</field>
            <field name="arch" type="xml">
                <search string="ProductItem">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="factory_id"/>
                    <field name="lot_id"/>
                    <field name="weight"/>
                    <field name="refuse"/>
                    <field name="controlled"/>
                </search>
            </field>
        </record>

        <record id="product.item_act_window" model="ir.actions.act_window">
            <field name="name">ProductItem</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">test_05.product.item</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ProductItem.
                </p>
            </field>
        </record>

        <menuitem name="ProductItem" id="product.item_menu" parent="test_05_root_menu"
                  action="product.item_act_window"/>

    </data>
</odoo>