<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="production.lot_form_view" model="ir.ui.view">
            <field name="name">test_05.production.lot.form</field>
            <field name="model">test_05.production.lot</field>
            <field name="arch" type="xml">
                <form string="Production Lot">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="production.lot_tree_view" model="ir.ui.view">
            <field name="name">test_05.production.lot.tree</field>
            <field name="model">test_05.production.lot</field>
            <field name="arch" type="xml">
                <tree string="Production Lot">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="production.lot_search_view" model="ir.ui.view">
            <field name="name">test_05.production.lot.search</field>
            <field name="model">test_05.production.lot</field>
            <field name="arch" type="xml">
                <search string="Production Lot">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </search>
            </field>
        </record>

        <record id="production.lot_act_window" model="ir.actions.act_window">
            <field name="name">Production Lot</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">test_05.production.lot</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Production Lot.
                </p>
            </field>
        </record>

        <menuitem name="Production Lot" id="production.lot_menu" parent="test_05_root_menu"
                  action="production.lot_act_window"/>

    </data>
</odoo>