<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="client_view_form" model="ir.ui.view">
        <field name="name">client.view.form</field>
        <field name="model">market.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="surname"/>
                            <field name="client_code"/>
                        </group>
                        <group>
                            <field name="birthday"/>
                            <field name="point"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="client_view_list" model="ir.ui.view">
        <field name="name">client.view.list</field>
        <field name="model">market.client</field>
        <field name="arch" type="xml">
            <tree string="Client">
                <field name="name"/>
                <field name="surname"/>
                <field name="point"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="client_action" model="ir.actions.act_window">
        <field name="name">Client</field>
        <field name="res_model">market.client</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first client!
            </p>
        </field>
    </record>

</odoo>