<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="market_invoice_view_form" model="ir.ui.view">
        <field name="name">market.invoice.view.form</field>
        <field name="model">market.invoice</field>
        <field name="arch" type="xml">
            <form string="Market_invoice">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="done,paid"
                           options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="invoice_code"/>
                            <field name="invoice_date"/>
                            <field name="invoice_type"/>
                        </group>
                        <group>
                            <field name="client_id"/>
                            <field name="employee_id"/>
                            <field name="total"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Invoice lines">
                            <field name="invoice_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="market_invoice_view_list" model="ir.ui.view">
        <field name="name">market.invoice.view.list</field>
        <field name="model">market.invoice</field>
        <field name="arch" type="xml">
            <tree string="Market_invoice">
                <field name="invoice_code"/>
                <field name="invoice_date"/>
                <field name="total"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="market_invoice_action" model="ir.actions.act_window">
        <field name="name">Market invoice</field>
        <field name="res_model">market.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first market invoice!
            </p>
        </field>
    </record>

</odoo>