<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="market_employee_view_form" model="ir.ui.view">
        <field name="name">market.employee.view.form</field>
        <field name="model">market.employee</field>
        <field name="arch" type="xml">
            <form string="Market_employee">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="surname"/>
                            <field name="position"/>
                        </group>
                        <group>
                            <field name="salary"/>
                            <field name="rate"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                    </group>
                    <label for="description" string="Description"/>
                    <field name="description"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="market_employee_view_list" model="ir.ui.view">
        <field name="name">market.employee.view.list</field>
        <field name="model">market.employee</field>
        <field name="arch" type="xml">
            <tree string="Market_employee">
                <field name="name"/>
                <field name="surname"/>
                <field name="position"/>
                <field name="salary"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="market_employee_action" model="ir.actions.act_window">
        <field name="name">Employee</field>
        <field name="res_model">market.employee</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first market employee!
            </p>
        </field>
    </record>

</odoo>