<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="market_product_view_form" model="ir.ui.view">
        <field name="name">market.product.view.form</field>
        <field name="model">market.product</field>
        <field name="arch" type="xml">
            <form string="Market_product">
                <sheet>
                    <group>
                        <group>
                            <field name="product"/>
                            <field name="category_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="purchase_price"/>
                            <field name="sell_price"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="market_product_view_list" model="ir.ui.view">
        <field name="name">market.product.view.list</field>
        <field name="model">market.product</field>
        <field name="arch" type="xml">
            <tree string="Market_product">
                <field name="product"/>
                <field name="quantity"/>
                <field name="sell_price"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="market_product_action" model="ir.actions.act_window">
        <field name="name">Market product</field>
        <field name="res_model">market.product</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first market product!
            </p>
        </field>
    </record>

</odoo>