<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="market_category">
            <field name="name">Market Category</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_market_employee" model="res.groups">
            <field name="name">Market Employee</field>
            <field name="category_id" ref="market.market_category"/>
        </record>

        <record id="see_his_own_market" model="ir.rule">
            <field name="name">See his own market</field>
            <field ref="model_market_invoice" name="model_id"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_market_employee'))]"/>
        </record>

    </data>
</odoo>