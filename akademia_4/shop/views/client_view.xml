<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="client_form_view" model="ir.ui.view">
            <field name="name">shop.client.form</field>
            <field name="model">shop.client</field>
            <field name="arch" type="xml">
                <form string="Client">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="surname"/>
                                <field name="birthday"/>
                                <field name="address"/>
                                <field name="client_id"/>
                            </group>
                            <group>
                                <field name="point"/>
                                <field name="email"/>
                                <field name="phone_number"/>
                                <field name="gender"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="client_tree_view" model="ir.ui.view">
            <field name="name">shop.client.tree</field>
            <field name="model">shop.client</field>
            <field name="arch" type="xml">
                <tree string="Client">
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="client_id"/>
                    <field name="point"/>
                </tree>
            </field>
        </record>

        <record id="client_search_view" model="ir.ui.view">
            <field name="name">shop.client.search</field>
            <field name="model">shop.client</field>
            <field name="arch" type="xml">
                <search string="Client">
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="client_id"/>
                    <field name="point"/>
                </search>
            </field>
        </record>

        <record id="client_act_window" model="ir.actions.act_window">
            <field name="name">Client</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shop.client</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Client.
                </p>
            </field>
        </record>

        <menuitem id="shop_menu_root" name="Shop" sequence="10"/>
        <menuitem name="Client" id="client_menu" parent="shop_menu_root" action="client_act_window"/>

    </data>
</odoo>