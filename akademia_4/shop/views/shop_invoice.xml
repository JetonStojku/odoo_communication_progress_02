<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="shop_invoice_view_form" model="ir.ui.view">
        <field name="name">shop.invoice.view.form</field>
        <field name="model">shop.invoice</field>
        <field name="arch" type="xml">
            <form string="Shop_invoice">
                <sheet>
                    <group>
                        <group>
                            <field name="invoice_nr"/>
                            <field name="client_id"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="total"/>
                            <field name="payment_type"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="invoice_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="shop_invoice_view_list" model="ir.ui.view">
        <field name="name">shop.invoice.view.list</field>
        <field name="model">shop.invoice</field>
        <field name="arch" type="xml">
            <tree string="Shop_invoice">
                <field name="invoice_nr"/>
                <field name="total"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="shop_invoice_action" model="ir.actions.act_window">
        <field name="name">Shop invoice</field>
        <field name="res_model">shop.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first shop invoice!
            </p>
        </field>
    </record>
</odoo>