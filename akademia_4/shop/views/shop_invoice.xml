<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="shop_invoice_view_form" model="ir.ui.view">
        <field name="name">shop.invoice.view.form</field>
        <field name="model">shop.invoice</field>
        <field name="arch" type="xml">
            <form string="Shop_invoice">
                <header>
                    <button name="done_status" type="object" string="Done" class="btn-primary"
                            invisible="state!='draft'"/>
                    <button name="paid_status" type="object" string="Paid" class="btn-primary"
                            invisible="state!='done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,paid"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="invoice_nr" readonly="True"/>
                            <field name="client_id" readonly="state!='draft'"/>
                            <field name="employee_id" readonly="state!='draft'"/>
                        </group>
                        <group>
                            <field name="total"/>
                            <field name="payment_type" readonly="state!='draft'"/>
                            <field name="invoice_type" invisible="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="invoice_line_ids" readonly="state!='draft'">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="shop_invoice_view_list" model="ir.ui.view">
        <field name="name">shop.invoice.view.list</field>
        <field name="model">shop.invoice</field>
        <field name="arch" type="xml">
            <tree string="Shop_invoice">
                <field name="invoice_nr"/>
                <field name="total"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="shop_invoice_action_in" model="ir.actions.act_window">
        <field name="name">Shop invoice in</field>
        <field name="res_model">shop.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('invoice_type', '=', 'in')]</field>
        <field name="context">{'default_invoice_type': 'in'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first shop invoice!
            </p>
        </field>
    </record>

    <record id="shop_invoice_action_out" model="ir.actions.act_window">
        <field name="name">Shop invoice out</field>
        <field name="res_model">shop.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('invoice_type', '=', 'out')]</field>
        <field name="context">{'default_invoice_type': 'out'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first shop invoice!
            </p>
        </field>
    </record>
</odoo>