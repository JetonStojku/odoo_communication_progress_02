<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_product_report_wizard_form_view" model="ir.ui.view">
            <field name="name">shop.invoice.product.report.wizard.form</field>
            <field name="model">shop.invoice.product.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Invoice Report">
                    <group>
                        <field name="product_ids" widget="many2many_tags"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <footer>
                        <button name="print_report"
                                string="Print"
                                type="object"
                                data-hotkey="q"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="invoice_product_report_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Invoice Product Report Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shop.invoice.product.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="invoice_report_wizard_form_view"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>