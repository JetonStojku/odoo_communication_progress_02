<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_report_invoice_product" model="ir.actions.report">
            <field name="name">Group by Product In Out Report</field>
            <field name="model">shop.invoice.line</field>
            <field name="report_name">shop.report_invoice_product</field>
            <field name="report_type">qweb-html</field>
            <field name="report_file">invoice_product_report</field>
        </record>

        <template id="report_invoice_product">
            <t t-set="data_report_landscape" t-value="True"/>
            <t t-set="full_width" t-value="True"/>
            <t t-call="web.html_container">
                <h3 t-esc="report_name"/>
                <div>
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity out</th>
                                <th>Total out</th>
                                <th>Quantity in</th>
                                <th>Total in</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="o">
                                <!-- for o in docs -->
                                <tr>
                                    <td>
                                        <span t-esc="docs[o]['product']"/>
                                    </td>
                                    <td>
                                        <span t-esc="docs[o]['qty_out']"/>
                                    </td>
                                    <td>
                                        <span t-esc="docs[o]['total_out']"/>
                                    </td>
                                    <td>
                                        <span t-esc="docs[o]['qty_in']"/>
                                    </td>
                                    <td>
                                        <span t-esc="docs[o]['total_in']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>
    </data>
</odoo>