<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_report_invoice" model="ir.actions.report">
            <field name="name">Product In Out Report</field>
            <field name="model">shop.invoice.line</field>
            <field name="report_name">shop.report_invoice</field>
            <field name="report_type">qweb-html</field>
            <field name="report_file">invoice_report</field>
        </record>

        <template id="report_invoice">
            <t t-set="data_report_landscape" t-value="True"/>
            <t t-set="full_width" t-value="True"/>
            <t t-call="web.html_container">
                <h3 t-esc="report_name"/>
                <div>
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Date</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="total" t-value="0"/>
                            <t t-foreach="docs" t-as="o">
                                <t t-set="total" t-value="total+o['total']"/>
                                <!-- for o in docs -->
                                <tr>
                                    <td>
                                        <span t-esc="o['product']"/>
                                    </td>
                                    <td>
                                        <span t-esc="o['date']"/>
                                    </td>
                                    <td>
                                        <span t-esc="o['quantity']"/>
                                    </td>
                                    <td>
                                        <span t-esc="o['price']"/>
                                    </td>
                                    <td>
                                        <span t-esc="o['total']"/>
                                    </td>
                                    <td>
                                        <span t-esc="o['type']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4"/>
                                <td>
                                    <span t-esc="total"/>
                                </td>
                                <td/>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </t>
        </template>
    </data>
</odoo>