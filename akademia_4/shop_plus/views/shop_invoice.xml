<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View -->
    <record id="shop_invoice_view_form_inherit" model="ir.ui.view">
        <field name="name">shop.invoice.view.form.inherit</field>
        <field name="model">shop.invoice</field>
        <field name="inherit_id" ref="shop.shop_invoice_view_form"/>
        <field name="arch" type="xml">
            <!-- Add fields to an existing group -->
            <xpath expr="//button[@name='done_status']" position="after">
                <button name="apply_discount" type="object" string="Apply discount" class="btn-success"
                        invisible="state!='draft'"/>
            </xpath>

            <!-- Add a new page to the notebook -->
            <field name="client_id" position="after">
                <field name="point"/>
            </field>

            <!-- Modify an existing field -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price']" position="after">
                <field name="discount"/>
            </xpath>


        </field>
    </record>

</odoo>